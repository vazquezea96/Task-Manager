<!-- The Landing Page of the application, will display todos -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
  </head>
  <body>
    <h1>Hello, World!</h1>

    <div class="container">
      <div class="row">
        <% todos.forEach(todo => { %>
        <div class="">
          <div class="">
            <div class="card-body">
              <h5 class="card-title"><%= todo.title %></h5>
              <p class="card-text"><%= todo.description %></p>
              <a href="/todos/<%= todo._id %>" class="">View Details</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
